<div id="edit-user-<%= employee.id %>" class="modal" style="display: none;">
  <%= simple_form_for employee, :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Editar Usuario</h3>
    </div>
    <div class="modal-body">
      <%= f.input :name %>
      <%= f.input :faults_number %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Editar", :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>